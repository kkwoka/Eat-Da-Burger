<h1 id="title">EAT-DA-BURGER!</h1>
<img src="../assets/burger2.jpg" alt="burger_pic" id="burgerpic">

<br>

<div class="container">

  <div class="row">
      <h2 class="col-md-6 center">Get In My Belly!</h2>
      <h2 class="col-md-6 center">That Was Delicious!</h2>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <ol>
        {{#each burgers}}
          {{#unless devoured}}
              {{> burger-block devoured = false}}
          {{/unless}}
        {{/each}}
      </ol>
    </div>
    <div class="col-sm-6">
      <ol>
        {{#each burgers}}
          {{#if devoured}}
              {{> burger-block devoured = true }}
          {{/if}}
        {{/each}}
      </ol>
    </div>

</div>


<div class="center" id="form">
  <h2>Add a Burger You'd Like to Eat:</h2>

  <form class="create-form">
    <div class="form-group">
      <label for="bur">Burger Name:</label>
      <input type="text" id="bur" name="name">
    </div>
    <button type="submit">Add Burger</button>
  </form>

</div>

