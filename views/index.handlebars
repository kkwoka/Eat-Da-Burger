<h1>Burgers!</h1>

<h2>Burgers you want to eat:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <p>{{ burger_name }}</p>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you have eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <p>{{ burger_name }}</p>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eat">Eat Me?</label><br>
    <input type="radio" name="eatMe" value="1" checked> Eaten!<br>
    <input type="radio" name="eatMe" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
